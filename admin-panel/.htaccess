# Deny access to this file
<Files "config.php">
    Order allow,deny
    Deny from all
</Files>

# Prevent directory listing
Options -Indexes

# Protect sensitive files
<FilesMatch "\.(sql|md|log)$">
    Order allow,deny
    Deny from all
</FilesMatch>

